@model WebApplication1.Models.Produto

@{
    ViewBag.Title = "_FrmProduto";
}

<h2>_FrmProduto</h2>



<div class="form-horizontal">
    <h4>Cliente</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row form-group">
        <div class="col-md-7">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control col-12" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row form-group">
        <div class="col-3">
            @Html.LabelFor(model => model.Marca)
            @Html.DropDownList("Marca", new SelectList(ViewBag.ListaProduto, "Nome", "Nome"), new { @class = "form-control dropdown-toggle col-12" })
        </div>
    </div>
</div>
